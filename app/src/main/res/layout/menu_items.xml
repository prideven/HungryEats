<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/mcd_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/mcd" />

    <TextView
        android:id="@+id/restaurnt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Menu Items"
        android:textColor="#B22222"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/menu_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Menu Items description"
        android:textColor="#B22222"
        android:textSize="10sp"
     />


    <androidx.recyclerview.widget.RecyclerView xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/menu_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:itemCount="5"
        tools:listitem="@layout/restaurant_menu_item_layout" />

    <!--    <include layout="@layout/frenchfries" />-->

    <!--    <include layout="@layout/chickenburger" />-->


</LinearLayout>
</layout>